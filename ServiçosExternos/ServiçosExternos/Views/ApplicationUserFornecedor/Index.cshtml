@model IEnumerable<ServiçosExternos.Models.ApplicationUserFornecedor>

@{
    ViewBag.Title = "Serviços Externos - Usuários x Fornecedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <h2>Usuário x Fornecedor</h2>
    <div align="right" style="width:100%;">
        <p>
            @Html.ActionLink("Adicionar", "Create")
        </p>
    </div>
    <table class="table">
        <tr>
            <th align="left" class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th align="left" class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>           
            <th align="right" class="col-xs-3 col-sm-3 col-md-3 col-lg-3"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td align="center" class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                    @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
                </td>
                <td align="center" class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                    @Html.DisplayFor(modelItem => item.Fornecedor.Name)
                </td>              
                <td align="right" class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Remover", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>