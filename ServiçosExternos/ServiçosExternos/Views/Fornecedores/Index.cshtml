@model IEnumerable<ServiçosExternos.Models.Fornecedor>

@{
    ViewBag.Title = "Serviços Externos - Fornecedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <h2>Cadastro de Fornecedores</h2>
    <div align="right" style="width:100%;">
        <p>
            @Html.ActionLink("Adicionar", "Create")
        </p>
    </div>
    <table class="table">
        <tr class="row col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <th align="center" class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th align="right" class="col-xs-3 col-sm-3 col-md-3 col-lg-3" ></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="row">
                <td align="left" class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td align="right" class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Remover", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>