@model ServiçosExternos.Models.Fornecedor

@{
    ViewBag.Title = "Serviços Externos - Alteração de Fornecedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-body">    

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-inline">
            <div style="padding-left:20px;">
                <h4>Alteração de Fornecedor</h4>
            </div>
<hr/>            

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-xs-12 col-sm-12 col-md-12 col-lg-12", style = "width:100%;" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div align="right" class="row col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="col-md-offset-2 col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <br />
                    <input type="submit" value="Salvar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Voltar a lista", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</div>