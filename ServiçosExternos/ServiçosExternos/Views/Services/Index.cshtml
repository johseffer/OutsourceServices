@model IEnumerable<ServiçosExternos.Models.Service>

@{
    ViewBag.Title = "Serviços Externos - Ordens de Serviço";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <h2>Ordens de Serviço</h2>
    <div align="right" style="width:100%;">
        <p>
            @Html.ActionLink("Adicionar", "Create")
        </p>
    </div>
    <table class="table">
        <tr>
            <th align="left" class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th align="left" class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                @Html.DisplayNameFor(model => model.ServiceType)
            </th>
            <th align="right" class="col-xs-3 col-sm-3 col-md-3 col-lg-3"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td align="center" class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                    @Html.DisplayFor(modelItem => item.Cliente.Name)
                </td>
                <td align="center" class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @Html.DisplayFor(modelItem => item.Fornecedor.Name)
                </td>
                <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @Html.DisplayFor(modelItem => item.ServiceType)
                </td>
                <td align="right" class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Remover", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>